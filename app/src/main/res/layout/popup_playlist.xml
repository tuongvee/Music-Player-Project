<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_playlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custome_popup"
    android:layout_alignParentBottom="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:id="@+id/list_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/vert_item"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:padding="15dp"
            android:background="@drawable/background_transparent">

            <ImageView
                android:id="@+id/vert_item_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/vert_item_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="Name"
                android:textSize="20dp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/vert_item_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"
                android:text="Artist"
                android:textSize="20dp"
                android:textColor="@color/grey" />

            <View android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
